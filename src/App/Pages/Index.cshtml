@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h5>Welcome to BookRec, the best book recommendation system.</h5>
    <h5>Please go to <a clas="btn-link btn" asp-area="Book" asp-page="/Index">My Books</a> and the add books you read.</h5>
    <br />
    <h5>Please choose the filtering you want to apply</h5>
    <div class="text-center">
        <form asp-page="Index" method="post" asp-page-handler="FindRecommendation" class="recommender-form">
            <button class="btn btn-primary" type="submit" onclick="toggleLoading()">Content-Based Filtering</button>
        </form>
        <form class="recommender-form">
            <button class="btn btn-primary" type="submit" onclick="toggleLoading()">Collaborative Filtering</button>
        </form>
        <form class="recommender-form">
            <button class="btn btn-primary" type="submit" onclick="toggleLoading()">Hybrid Filtering</button>
        </form>
    </div>
</div>
<div class="text-center" id="loading">
    <br /><br />
    <img src="~/img/loading.gif" width="80" />
</div>

@if (Model.Predications != null && Model.Predications.Any())
{
    <br />
    <h2>We recommend:</h2>
    <hr class="hr-light" />
    <div class="card-columns">
        @foreach (var book in Model.Predications.Select(x => x.Book))
        {
            <div class="card">
                @if (string.IsNullOrEmpty(book.ImageLink))
                {
                    <img class="card-img-top img-fluid" src="~/img/no_image.png" alt="@book.Title" title="@book.Title">
                }
                else
                {
                    <img class="card-img-top img-fluid" src="@book.ImageLink" alt="@book.Title" title="@book.Title">
                }
            <div class="card-body">
                <h5 class="card-title">@book.Title</h5>
                <p class="card-text">@book.Subtitle</p>
                <p class="card-text">Category: <b>@book.Categories</b></p>
                <p class="card-text">Language: @book.LanguageCode</p>
                <p class="card-text">Author: @book.Authors</p>
            </div>
                <div class="card-footer">
                    <a href="@book.PreviewLink" target="_blank" class="btn btn-link">Visit</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <br /><br />
        <p>There are no recommendations</p>
    </div>
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#loading').hide();
        });

        function toggleLoading() {
            $('#loading').show();
        }
    </script>
}